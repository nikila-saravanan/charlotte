<%= render 'search' %>

<h1>Name: <%= @artist.name %>, Followers <%= @artist.followers["total"] %> </h1>
<h2><%= link_to 'See artist on Spotify', @artist.external_urls.values[0] %>

<h2>Related Artists</h2>
<ul>
<% @related_artists.each do |artist| %>
  <li>Name: <%= artist.name %>, Followers: <%= artist.followers["total"] %>, <%= link_to 'See artist and related artists', request.parameters.merge({:q => artist.name }) %></li>
<% end %>
</ul>
